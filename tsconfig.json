{
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "exclude": ["src/**/__tests__/*", "**/dist/**", "uno.config.ts"],
  "declaration": false,
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "composite": false,
    "skipLibCheck": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "types": ["node", "webpack-env"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
